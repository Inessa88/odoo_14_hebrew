                        </group>
                        <group>
                            <div conspan="2">
                                <audio controls="1" type="audio/mpeg">
                                    <source src="fifth_audio"/>
                                    Your browser does not support the audio element.
                                </audio>
                            </div>
                            <div colspan="4" attrs="{'invisible': [('fifth_picture_present', '=', False)]}">
