<?xml version="1.0"?>
<odoo>
    <data>

        <record id="wizard_writing_training_first_word_view_form" model="ir.ui.view">
            <field name="name">wizard.writing.training.first.word.view.form</field>
            <field name="model">wizard_writing_training</field>
            <field name="arch" type="xml">
                <form string="Writing training" create="0">
                    <div>Writing training</div>
                    <br/>
                    <strong><span>There is <field name="number_of_words_left_to_train"/> word(s) left to train.</span></strong>
                    <group invisible="1">
                        <field name="exercise_type_id"/>
                        <field name="first_question_answered"/>
                        <field name="second_question_answered"/>
                        <field name="third_question_answered"/>
                        <field name="fourth_question_answered"/>
                        <field name="fifth_question_answered"/>
                        <field name="all_words_to_train_ids"/>
                        <field name="number_of_words_to_train"/>
                    </group>
                    <group style="font-size: 150% !important;">
                        <group>
                            <field name="first_word_to_train_id" invisible="1"/>
                            <field name="first_hebrew_word" attrs="{'invisible': [('first_word_help', '=', False)]}" readonly="1"/>
                            <field name="first_hebrew_word_nikud" invisible="1"/>
                            <field name="first_pronunciation_word"/>
                            <field name="first_translation_word"/>
                            <field name="first_note" invisible="1"/>
                        </group>
                        <group>
                            <field name="first_picture" widget='image' nolabel="1"/>
                        </group>
                        <group>
                            <field name="first_word_help" string="HELP!!!"/>
                            <field name="first_word_typing" nolabel="1" default_focus="1"/>
                            <button name="give_answer"
                                    string="Test"
                                    class="btn-primary"
                                    type="object"
                                    context="{'given_first_answer': True,}"
                            />
                            <div colspan="4">
                                <audio controls="1" type="audio/mpeg">
                                    <source src="first_audio"/>
                                    Your browser does not support the audio element.
                                </audio>
                            </div>
                            <div colspan="4" attrs="{'invisible': [('first_picture_present', '=', False)]}">
                                <field name="first_picture_present" widget='image' nolabel="1" style="width:150%"/>
                                <audio controls="1" type="audio/mpeg">
                                    <source src="first_audio_present"/>
                                    Your browser does not support the audio element.
                                </audio>
                            </div>
                        </group>
                    </group>
                </form>
            </field>
        </record>

